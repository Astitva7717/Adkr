<h4 class="d-flex justify-content-between mb-4">
  <span>Advertisement</span>
  <%= link_to 'New Advertisement', new_post_path, class:'btn btn-primary' %>
</h4>

<% @posts.each do |post| %>
  <%= link_to edit_post_path(post), class: 'text-decoration-none'  do %>
    <div class='card mb-3'>
      <div class='card-body'>
        <h5 class='card-title mb -1 text-dark'><%= post.title %></h5>
        <p class='text-secondary mb-o'><%= post.description %></p>
      </div>
    </div>
  <% end %>
<% end %>

